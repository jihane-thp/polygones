<div class="container">
	<div class="row">
			<% for article in @articles %>
				<div class="col-md-3">
					<a href="<%= root_path + @site.url+"/"+article.slug %>">
						<div class="thumb card-img-top" style="background-image: url('<%= article.image %>')">
								<h5 class="card-title"> <%= article.title %></h5>
						</div>
					</a>
				</div>
			<% end %>
	</div>
</div>