<div class="row">

  <div class="offset-md-2 col-8">
    <div class="card">
      <div class="card-body">

        <h2>Connexion</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-row">
            <div class="form-group col-md-12">
              <%= f.label :email, class:"col-form-label label1" %>
              <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
            <%= f.label :mot_de_passe, class:"col-form-label label1" %>
            <%= f.password_field :password, autocomplete: "mot de passe", class:"form-control" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="form-row">
            <div class="form-group col-md-12">
              <%= f.check_box :remember_me %>
              <%= f.label :se_souvenir_de_moi %>
            </div>
          </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Connexion", class:"btn btn-primary" %>
          </div>
        <% end %>
        <br/>
        <p>Pas encore de blog Polygones ? <%= link_to "CrÃ©ez-en un ici !", new_user_registration_path %></p>

</div>
</div>
</div>
</div>