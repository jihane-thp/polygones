<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">

<h2>Je crée mon site gratuitement !</h2>

<p class="notice"><%= notice %></p>
    <p class="alert" style="color:red"><%= alert %></p>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-row">

    <div class="form-group col-md-6">
    <%= f.label :nom_de_mon_site, class:"col-form-label label1" %>
    <%= f.text_field :site, autocomplete: "site_name", class:"form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :adresse_de_mon_site, class:"col-form-label label1" %>
      <%= text_field "site", "url", class:"form-control"%>
    </div>

</div>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :prénom, class:"col-form-label label1" %>
    <%= f.text_field :first_name, autocomplete: "first_name", class:"form-control" %>
  </div>

    <div class="form-group col-md-6">
    <%= f.label :nom_de_famille, class:"col-form-label label1" %>
    <%= f.text_field :last_name, autocomplete: "last_name", class:"form-control" %>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :pseudonyme, class:"col-form-label label1" %>
    <%= f.text_field :nickname, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :email, class:"col-form-label label1" %>
    <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :mot_de_passe, class:"col-form-label label1" %><% if @minimum_password_length %><em class="label2"> (<%= @minimum_password_length %> caractères minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :confirmation_du_mot_de_passe, class:"col-form-label label1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "Créer mon site", class:"btn btn-primary"  %>
  </div>
<% end %>

</div>
</div>
</div>
</div>
