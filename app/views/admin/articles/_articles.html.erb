<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9 col-xs-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="m-b-30 m-t-0 header-title">Mes articles</h4><br/>
                            <table class="table table-striped mb-0">
                                <tbody>

                                    <% if @articles.empty? %>
                                        <p>Vous n'avez pas encore écrit d'article.</p>
                                    <% else %>
                                        <% for article in @articles %>
                                        <tr>
                                            <td><%= article.title %></td>
                                            <td><i class="far fa-eye"></i><%= link_to ' Voir', root_path + @site.url+"/"+article.slug %></td>
                                            <td><i class="far fa-edit"></i><%= link_to ' Editer', edit_admin_article_path(@site.url, article) %></td>
                                            <td><i class="far fa-trash-alt"></i><%= link_to ' Supprimer', admin_article_path(@site.url,article), method: :delete, data: { confirm: 'Êtes-vous sûr·e?' } %></td>
                                              <td><%= article.hits %> vues</td>
                                        </tr>
                                        <%end%>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="m-b-30 m-t-0 header-title">Options</h4>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <div class="field">
                                        <br/>
                                        <%= link_to 'Créer un nouvel article', {action: :new}, class:"btn btn-primary" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
