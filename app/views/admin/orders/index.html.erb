
<div class="content-page">
 	<div class="content">
 		<div class="container-fluid">
 			<div class="row">
 				<div class="col-12 col-xs-12">
 					<div class="card">
 						<div class="card-body">
 							<h4 class="m-b-30 m-t-0 header-title">Mes commandes</h4> <br/>

              <% if @orders.empty? %>
                <p>Vous n'avez pas encore acheté de thème.</p>
              <% else %>
                <table class="table table-striped mb-0">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Total</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @orders.each do |order| %>
                      <tr>
                        <td><%= order.created_at.to_formatted_s(:fulldate) %></td>
                        <td><%= order.price %> €</td>
                        <td><%= link_to 'Voir', admin_order_path(@site.url, order) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              <% end %>
 						</div>
 					</div>
 				</div>
 			</div>
 		</div>
 	</div>
 </div>


<br>

</div> </div>
