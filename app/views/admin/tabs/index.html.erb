<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-9 col-xs-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="m-b-30 m-t-0 header-title">Mon menu</h4><br/>
                            <table class="table mb-0">
                                <tbody>

                                  <% @tabs.each do |tab| %>
                                    <tr>
                                      <td><%= tab.title %></td>
                                      <td><i class="far fa-edit"></i><%= link_to ' Editer', edit_admin_tab_path(@site.url,tab) %>


                                      </td>
                                      <td><i class="far fa-trash-alt"></i><%= link_to ' Supprimer', admin_tab_path(@site.url,tab), method: :delete, data: { confirm: 'Êtes-vous sûr·e?' } %></td>


                                    </tr>
                                  <% end %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-12">  
                    <div class="card">
                        <div class="card-body">
                            <h4 class="m-b-30 m-t-0 header-title">Configuration du menu</h4>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <div class="field">
                                        <br/>
                                        <%= link_to 'Créer un nouvel onglet pour un article', new_admin_tab_path, class:"btn btn-primary", style:"white-space: normal;" %>
                                        <br/><br/>
                                        <%= link_to 'Créer un nouvel onglet pour une catégorie', admin_new_tab_category_path, class:"btn btn-primary", style:"white-space: normal;" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
