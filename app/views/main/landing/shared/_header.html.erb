<header>
	<section class="hero">
		<div class="container">
			<div class="row nav-wrapper">
				<div class="col-lg-12 p-0">
					<!--Navbar Start-->
					<nav class="navbar navbar-expand-lg navbar-custom">
						<div class="container">
							<!-- LOGO -->
							<%= link_to root_path do %>
								<%= image_tag 'main/logo.png', alt:"logo", height:"40" %>
							<% end %>
							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
								<i class="fa fa-bars text-white"></i>
							</button>
							<div class="collapse navbar-collapse" id="navbarCollapse">
								<ul class="navbar-nav ml-auto navbar-center" id="mySidenav">

									<% if user_signed_in? && current_user.admin?%>

										<li class="nav-item">
											<%= link_to "Administration", admin_dashboard_index_path(current_user.site.url), class:"nav-link" %>
										</li>
										<li class="nav-item">
											<a href="/<%= current_user.site.url %>" class="nav-link" > Mon blog</a>
										</li>
										<li class="nav-item">
											<%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class:"nav-link" %>
										</li>
									<% else %>

										<li class="nav-item">
											<%= link_to "Me connecter", new_user_session_path, class:"nav-link" %>
										</li>
										<li class="nav-item">
											<%= link_to "Créer mon blog", new_user_registration_path, class:"btn-signup btn-secondary" %>
										</li>

									<% end %>

								</ul>
							</div>
						</div>
					</nav>
					<!-- Navbar End -->
				</div>
			</div> <!-- End row -->

			<div class="row hero-content text-center">
				<div class="col-lg-12">
					<h1 class="red">Vos&nbsp;passions. Votre&nbsp;blog. En&nbsp;quelques&nbsp;clics. </h1>
					<% if user_signed_in? && current_user.admin?%>
						<%= link_to "C'est parti !", admin_dashboard_index_path(current_user.site.url), class:"btn-signup btn-primary btn-lg" %>
					<% else %>
						<%= link_to "C'est parti !", new_user_registration_path, class:"btn-signup btn-primary btn-lg" %>
					<% end %>
				</div>
			</div>
		</div> <!-- end container -->
	</section> <!-- end hero -->
</header>
